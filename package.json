{
  "name": "@hello.nrfcloud.com/proto-lwm2m",
  "version": "0.0.0-development",
  "description": "Documents the LwM2M communication protocol between devices, the hello.nrfcloud.com backend and the web application",
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./export.js",
      "node": "./export.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hello-nrfcloud/proto-lwm2m.git"
  },
  "bugs": {
    "url": "https://github.com/hello-nrfcloud/proto-lwm2m/issues"
  },
  "homepage": "https://hello.nrfcloud.com",
  "keywords": [
    "nordicsemiconductor",
    "cellular-iot",
    "hello-nrfcloud",
    "lwm2m"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "test": "find ./ -type f -name \\*.spec.ts -not -path './node_modules/*' | xargs npx tsx --test --test-reporter spec",
    "prepublishOnly": "./compile.sh"
  },
  "devDependencies": {
    "@bifravst/eslint-config-typescript": "6.0.10",
    "@bifravst/prettier-config": "1.0.0",
    "@commitlint/config-conventional": "19.0.3",
    "@swc/cli": "0.3.10",
    "@swc/core": "1.4.6",
    "@types/node": "20.11.25",
    "@types/xml2js": "0.4.14",
    "chalk": "5.3.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier-plugin-organize-imports": "3.2.4",
    "remark": "15.0.1",
    "remark-frontmatter": "5.0.0",
    "tsmatchers": "5.0.2",
    "tsx": "4.7.1",
    "xml2js": "0.6.2",
    "yaml": "2.4.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{md,json,yaml,yml,html}": [
      "prettier --write"
    ],
    "*.xml": [
      "./lwm2m/format.sh"
    ]
  },
  "prettier": "@bifravst/prettier-config",
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga|v[0-9].[0-9].x|*_*|*/*)",
        "prerelease": true
      }
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "LICENSE",
    "README.md",
    "dist",
    "export.js",
    "index.d.ts",
    "senml",
    "models",
    "lwm2m"
  ],
  "dependencies": {
    "@sinclair/typebox": "0.32.15",
    "ajv": "8.12.0",
    "jsonata": "2.0.4"
  }
}
