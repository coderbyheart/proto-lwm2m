{
  "name": "@hello.nrfcloud.com/proto-lwm2m",
  "version": "0.0.0-development",
  "description": "Documents the LwM2M communication protocol between devices, the hello.nrfcloud.com backend and the web application",
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./export.js",
      "node": "./export.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hello-nrfcloud/proto-lwm2m.git"
  },
  "bugs": {
    "url": "https://github.com/hello-nrfcloud/proto-lwm2m/issues"
  },
  "homepage": "https://hello.nrfcloud.com",
  "keywords": [
    "nordicsemiconductor",
    "cellular-iot",
    "hello-nrfcloud",
    "lwm2m"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "find ./ -type f -name \\*.spec.ts -not -path './node_modules/*' | xargs npx tsx --test --test-reporter spec",
    "prepublishOnly": "./compile.sh"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "18.4.3",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "13.1.1",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "17.0.0",
    "@swc/cli": "0.1.63",
    "@swc/core": "1.3.100",
    "@types/node": "20.10.3",
    "@types/xml2js": "0.4.14",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "chalk": "5.3.0",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-unicorn": "49.0.0",
    "husky": "8.0.3",
    "lint-staged": "15.1.0",
    "prettier": "3.1.0",
    "prettier-plugin-organize-imports": "3.2.4",
    "remark": "15.0.1",
    "remark-frontmatter": "5.0.0",
    "tsmatchers": "5.0.2",
    "tsx": "4.6.2",
    "typescript": "5.3.2",
    "xml2js": "0.6.2",
    "yaml": "2.3.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts,.jsx,.tsx"
    ],
    "*.{md,json,yaml,yml,html}": [
      "prettier --write"
    ],
    "*.xml": [
      "./lwm2m/format.sh"
    ]
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga|v[0-9].[0-9].x|*_*|*/*)",
        "prerelease": true
      }
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "LICENSE",
    "README.md",
    "dist",
    "export.js",
    "index.d.ts",
    "senml",
    "models",
    "lwm2m"
  ],
  "dependencies": {
    "@hello.nrfcloud.com/proto": "5.5.24",
    "@sinclair/typebox": "0.31.28",
    "ajv": "8.12.0",
    "jsonata": "2.0.3"
  }
}
